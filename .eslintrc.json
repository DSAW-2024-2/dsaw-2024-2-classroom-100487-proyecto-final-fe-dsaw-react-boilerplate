{
	"extends": [
		"next",
		"next/core-web-vitals",
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"plugins": ["react"], // Agregamos el plugin de Prettier
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "single"],
		"no-unused-vars": ["warn"],
		"no-console": ["warn"],
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off",
		"prefer-arrow-callback": ["warn"],
		"react/no-unescaped-entities": "off",
		"@next/next/no-page-custom-font": "off"
	}
}
